<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="pmub.Paris">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#0ed145" Padding="10">

            <Frame Padding="10" CornerRadius="0">
                <Label Text="P M U - B" HorizontalTextAlignment="Center" TextColor="red" FontSize="30"/>
            </Frame>
            <ScrollView>
                <StackLayout>

                    <Label Text="PARIS" FontSize="24" BackgroundColor="Yellow" HorizontalOptions="Center">

                    </Label>
                    <Label Text="La lotterie nationale du Burkina Faso" FontSize="16">

                    </Label>
                    <Grid Padding="0" HorizontalOptions="StartAndExpand">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>

                        </Grid.ColumnDefinitions>
                        
                        <RadioButton HorizontalOptions="Center"  x:Name="Simple" Content="Simple" IsChecked="true" Value="Simple" Grid.Row="0" Grid.Column="0" FontSize="12" FontAttributes="Bold"></RadioButton>
                        <RadioButton HorizontalOptions="Center"  x:Name="CoupleGagnant" Content="Couplé Gagnant" IsChecked="False" Value="CoupleGagnant" Grid.Row="0" Grid.Column="1" FontSize="12" FontAttributes="Bold"></RadioButton>
                        <RadioButton HorizontalOptions="Center"  x:Name="CouplePlacer" Content="Couplé Placé" IsChecked="False" Value="CouplePlacer" Grid.Row="0" Grid.Column="2" FontSize="12" FontAttributes="Bold"></RadioButton>

                    </Grid>

                    <Entry x:Name="Pari" IsEnabled="False" FontSize="20" FontAttributes="Bold" BackgroundColor="White"></Entry>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="Btn1" Text="1" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="0" Grid.Column="0"></Button>
                        <Button x:Name="Btn2" Text="2" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="0" Grid.Column="1"></Button>
                        <Button x:Name="Btn3" Text="3" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="0" Grid.Column="2"></Button>
                        <Button x:Name="Btn4" Text="4" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="0" Grid.Column="3"></Button>
                        <Button x:Name="Btn5" Text="5" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="0" Grid.Column="4"></Button>
                        <Button x:Name="Btn6" Text="6" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="1" Grid.Column="0"></Button>
                        <Button x:Name="Btn7" Text="7" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="1" Grid.Column="1"></Button>
                        <Button x:Name="Btn8" Text="8" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="1" Grid.Column="2"></Button>
                        <Button x:Name="Btn9" Text="9" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="1" Grid.Column="3"></Button>
                        <Button x:Name="Btn10" Text="10" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="1" Grid.Column="4"></Button>
                        <Button x:Name="Btn11" Text="11" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="2" Grid.Column="0"></Button>
                        <Button x:Name="Btn12" Text="12" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="2" Grid.Column="1"></Button>
                        <Button x:Name="Btn13" Text="13" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="2" Grid.Column="2"></Button>
                        <Button x:Name="Btn14" Text="14" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="2" Grid.Column="3"></Button>
                        <Button x:Name="Btn15" Text="15" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="2" Grid.Column="4"></Button>
                        <Button x:Name="Btn16" Text="16" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="3" Grid.Column="0"></Button>
                        <Button x:Name="Btn17" Text="17" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="3" Grid.Column="1"></Button>
                        <Button x:Name="Btn18" Text="18" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="3" Grid.Column="2"></Button>
                        <Button x:Name="Btn19" Text="19" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="3" Grid.Column="3"></Button>
                        <Button x:Name="Btn20" Text="20" FontSize="16" FontAttributes="Bold" BackgroundColor="Yellow" Grid.Row="3" Grid.Column="4"></Button>

                    </Grid>
                    <Button x:Name="ValiderPari" Text="Valider" BackgroundColor="Green" FontSize="16" FontAttributes="Bold"></Button>
                    <Label Text="100% gratuit" FontSize="10" TextColor="Black" VerticalOptions="End" HorizontalOptions="Center">

                    </Label>
                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>